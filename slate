# Configs
config defaultToCurrentScreen         true
config windowHintsShowIcons           true
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread              true
config windowHintsSpreadPadding       40

# Monitor aliases
alias mon-air 1440x900
alias mon-dell 1680x1050

# Default layouts
default 1monitor resolutions:${mon-air}

# Position aliases
alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY

alias third-window-width  move windowTopLeftX;windowTopLeftY windowSizeX/3;windowSizeY
alias half-window-width   move windowTopLeftX;windowTopLeftY windowSizeX/2;windowSizeY
alias half-window-height  move windowTopLeftX;windowTopLeftY windowSizeX;windowSizeY/2

alias half-screen-width     move windowTopLeftX;windowTopLeftY screenSizeX/2;screenSizeY
alias onethird-screen-width move windowTopLeftX;windowTopLeftY screenSizeX/3;screenSizeY
alias twothird-screen-width move windowTopLeftX;windowTopLeftY (screenSizeX*2)/3;screenSizeY

alias move-half     move    screenSizeX/2;screenOriginY windowSizeX;windowSizeY
alias corner-top-right  corner  top-right
alias corner-top-left   corner  top-left
alias corner-bottom-right corner bottom-right
alias corner-bottom-left  corner bottom-left

alias fourth-third-right sequence focus left | ${twothird-screen-width} | focus right | ${onethird-screen-width} | ${corner-top-right}
alias fourth-third-left sequence focus right > ${twothird-screen-width} | ${onethird-screen-width} | ${corner-top-right}
alias half-half-right sequence ${move-half} | ${half-screen-width} | focus left | ${half-screen-width} | focus right

alias half-screen-left  sequence ${half-screen-width} | ${corner-top-left}
alias half-screen-right sequence ${half-screen-width} | ${corner-top-right}

alias 2-throw-left throw  0 resize
alias 2-throw-right throw 1 resize
alias 2-throw-down throw  1 resize
alias 2-throw-up throw    0 resize

# Move/Resize bindings
bind f:cmd;shift ${full}

bind left:cmd;shift   ${2-throw-left}
bind right:cmd;shift  ${2-throw-right}
bind down:cmd;shift   ${2-throw-down}
bind up:cmd;shift     ${2-throw-up}

#bind 1:alt;cmd ${fourth-third-left}
#bind 2:alt;cmd ${fourth-third-right}

bind e:alt;cmd      ${half-half-right}
bind right:alt;cmd  ${half-screen-right}
bind left:alt;cmd   ${half-screen-left}

#bind i:fn;ctrl ${corner-top-right}
#bind u:fn;ctrl ${corner-top-left}
#bind k:fn;ctrl ${corner-bottom-right}
#bind j:fn;ctrl ${corner-bottom-left}

# Nudge bindings
bind right:ctrl;alt nudge +10% +0
bind left:ctrl;alt  nudge -10% +0

# Focus bindings
bind left:cmd   focus left
bind right:cmd  focus right

# Hint bindings
bind esc:cmd hint hjklbnmyuio

# Layout bindings
#bind l:cmd layout 1monitor

# Grid bindings
bind esc:ctrl grid

# Reload slate
bind r:ctrl;alt;cmd relaunch
